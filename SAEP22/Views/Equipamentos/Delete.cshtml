@model SAEP22.Models.Equipamentos

@{
    ViewData["Title"] = "Delete";
}


<div>
    <div class="mt-5 mb-5 d-flex justify-content-between align-items-center flex-wrap">
        <h4>Atenção! Tem certeza que deseja excluir o equipamento? Essa ação não poderá ser desfeita</h4>
        <a asp-action="Index" class="btn btn-link-dark">Voltar</a>
    </div>
    <hr />
    <div class="d-flex justify-content-center align-items-center">
        <img src="~/img/equipaments/@Html.DisplayFor(model => model.Imagem)" alt="Imagem do equipamento" />
    </div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
    </dl>

    <div class="mt-5 d-flex justify-content-center align-items-center text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-link" />
        </form>
    </div>
</div>
